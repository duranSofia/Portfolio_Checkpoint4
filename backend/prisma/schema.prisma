// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id Int @id @default(autoincrement())
  name String
  description String
  client Client?
  poster String
  images Image[]
  technologies Technology[]
  repository String
  link String
}

model Client{
  id Int @id @default(autoincrement())
  name String
  industry String
  project Project[]
}

model Technology {
  id Int @id @default(autoincrement())
  name String
  experience String?
  project Project[]
}

model Image {
  id Int @id @default(autoincrement())
  filename String
  project Project[]
}