generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id           Int          @id @default(autoincrement())
  name         String
  description  String
  poster       String
  repository   String
  link         String
  clientId     Int?
  client       Client?      @relation(fields: [clientId], references: [id])
  images      Image[]
  technologies Technology[]
}

model Client {
  id       Int       @id @default(autoincrement())
  name     String
  industry String
  project  Project[]
}

model Technology {
  id         Int       @id @default(autoincrement())
  name       String
  experience String?
  project    Project[]
}

model Image {
  id       Int       @id @default(autoincrement())
  filename String
  project  Project[]
}
